@using SuperMarketManagement.Application.Utilities.Extensions.Date
@using SuperMarketManagement.Application.Utilities.Extensions.Common
@model SuperMarketManagement.Application.DTOs.User.FilterUsersDto
@{
    ViewData["Title"] = "کاربران";
}

@section Scripts
    {
    <script>
        function DeleteUserSwal(userId) {
            Swal.fire({
                text: "آیا مطمئن هستید؟",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'بله',
                cancelButtonText: 'خیر'
            }).then((result) => {
                if (result.isConfirmed) {
                    deleteUser(userId);
                }
            });
        }

        function deleteUser(id) {
            var userUri = "/user/del/" + id;

            fetch(userUri, {
                method: 'post'
            }).then(function(response) {
                if (response.status !== 200) {
                    location.reload();
                }

                response.json().then(function() {
                    location.reload();
                });
            }).catch(function(err) {
                console.log(`error: ${err}`);
            });
        };



    </script>
}
    <div class="title_left">
        <div class="col-md-8">
            <h2>
                مدیریت کاربران
            </h2>
        </div>
        <div class="col-md-4">
            <a class="btn btn-success btn-block" asp-controller="User" asp-action="AddUser">
                افزودن کاربر
            </a>
        </div>
    </div>
<div class="col-md-8 col-sm-8 col-xs-12">
    @if (Model.Users.Any())
    {
        <div class="x_panel">
            <div class="x_title">
                <h2>
                    لیست کاربران
                </h2>
                <partial name="Partials/_PanelToolBox" />
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <table class="table table-hover">
                    <thead>
                    <tr>
                        <th>کد اشتراک</th>
                        <th>نام</th>
                        <th>آدرس</th>
                        <th>تاریخ ثبت نام</th>
                        <th>نقش</th>
                        <th>دستورات</th>
                    </tr>
                    </thead>
                    <tbody>
                    @foreach (var user in Model.Users)
                    {
                        <tr>
                            <th scope="row">@user.UserId</th>
                            <td>@user.UserName</td>
                            <td>@user.Address</td>
                            <td>@user.RegisterDate.ToShamsi()</td>
                            <td>@user.UserRole.GetEnumName()</td>
                            <td>
                                <a asp-controller="User" asp-action="Detail" asp-route-userId="@user.UserId" class="btn btn-info"><i class="fa fa-info"></i></a>
                                <a class="btn btn-primary"><i class="fa fa-edit"></i></a>
                                <a onclick="DeleteUserSwal(@user.UserId)" class="btn btn-danger"><i class="fa fa-trash"></i></a>
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
            <partial name="Partials/_Paging" model="Model.GetCurrentPaging()" />
        </div>
    }
    else
    {
        <div class="alert alert-danger alert-dismissible fade in" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">×</span>
            </button>
            <strong>کاربری ثبت نشده!</strong> هنوز کاربری را ثبت نکرده اید
        </div>
    }
</div>
<div>
    <form asp-controller="User" asp-action="Index" id="filterForm">
        <input type="hidden" asp-for="PageNum"/>
    </form>
</div>
